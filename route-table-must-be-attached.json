{
    "properties": {
        "displayName": "Audit if RouteTable attached",
        "description": "This policy audits if the virtual networks have a specific route table attached",
        "parameters": {
            "routetableName": {
                "type": "string",
                "metadata": {
                    "description": "Name of the route Table",
                    "displayName": "Route Table Name"
                }
            }
        },
        "policyRule": {
            "if":   {
                      "field": "type",
                      "equals": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings"
                    },
            "then": {
                "effect": "auditIfNotExists",
                "details": {
                    "type": "Microsoft.Network",
                    "existenceCondition":
                    {
                        "type": "Microsoft.Network/routeTables/name",
                        "equals": "[parameters('routetableName')]"
                    }
                }
            }
        }
    }
}